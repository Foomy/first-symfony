{% extends 'main.layout.twig' %}
{% block title %}{{ title }}{% endblock %}
{%  block content %}
<div id="userlist">
	<h2>{{ title }}</h2>

	<table class="table table-responsive">
		<thead>
			<tr>
				<th>#</th>
				<th>username</th>
				<th>email</th>
				<th>vorname</th>
				<th>nachname</th>
				<th>aktionen</th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<td colspan="5">[:: paginator ::]</td>
				<td>
					<button class="btn btn-success btn-add" id="btn-add">
						<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
							<path d="M15.5 6h-5.5v-5.5c0-0.276-0.224-0.5-0.5-0.5h-3c-0.276 0-0.5 0.224-0.5 0.5v5.5h-5.5c-0.276 0-0.5 0.224-0.5 0.5v3c0 0.276 0.224 0.5 0.5 0.5h5.5v5.5c0 0.276 0.224 0.5 0.5 0.5h3c0.276 0 0.5-0.224 0.5-0.5v-5.5h5.5c0.276 0 0.5-0.224 0.5-0.5v-3c0-0.276-0.224-0.5-0.5-0.5z"></path>
						</svg>
						{#<img src="{{ asset('ico/plus.svg') }}" alt="add icon" title="hinzufügen" aria-label="Datensatz hinzufügen">#}
					</button>
				</td>
			</tr>
		</tfoot>
		<tbody>
		{% for user in users %}
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.username }}</td>
				<td>{{ user.email }}</td>
				<td>{{ user.firstName }}</td>
				<td>{{ user.lastName }}</td>
				<td>
					<button class="btn btn-default btn-edit" id="btn-edt_{{ user.id }}" data-uid="{{ user.id }}" title="bearbeiten">
						<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
							<path d="M13.5 0c1.381 0 2.5 1.119 2.5 2.5 0 0.563-0.186 1.082-0.5 1.5l-1 1-3.5-3.5 1-1c0.418-0.314 0.937-0.5 1.5-0.5zM1 11.5l-1 4.5 4.5-1 9.25-9.25-3.5-3.5-9.25 9.25zM11.181 5.681l-7 7-0.862-0.862 7-7 0.862 0.862z"></path>
						</svg>
						{#<img src="{{ asset('ico/pencil.svg') }}" alt="pencil icon" aria-label="Datensatz bearbeiten">#}
					</button>
					<button class="btn btn-danger btn-delete" id="btn-del_{{ user.id }}" data-uid="{{ user.id }}">
						<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16">
							<path d="M0 6.5v3c0 0.276 0.224 0.5 0.5 0.5h15c0.276 0 0.5-0.224 0.5-0.5v-3c0-0.276-0.224-0.5-0.5-0.5h-15c-0.276 0-0.5 0.224-0.5 0.5z"></path>
						</svg>
						{#<img src="{{ asset('ico/minus.svg') }}" alt="delete icon" title="löschen" aria-label="Datensatz löschen">#}
					</button>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
